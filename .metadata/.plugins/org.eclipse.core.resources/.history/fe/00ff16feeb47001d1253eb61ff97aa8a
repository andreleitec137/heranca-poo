public class Navio {
	private int numTripulantes;
	private String nome;
	
	public Navio(String n, int t) {
		numTripulantes = t;
		nome = n;
	}
	
	public void exibirInfoGeral() {
		System.out.println("------ Informações Gerais - Navio -------");
		System.out.println("Nome do navio: " + getNome());
		System.out.println("Números de Tripulantes: " + getNumTripulantes());
	}
	
	public int getNumTripulantes() {
		return numTripulantes;
	}
	
	public String getNome() {
		return nome;
	}
}
